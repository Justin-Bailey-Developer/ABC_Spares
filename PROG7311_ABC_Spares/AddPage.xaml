      Background="Gray"
      FontSize="14"
      ShowsNavigationUI="False">

    <Grid>
        <Label Content="Part Name:" HorizontalAlignment="Left" Margin="105,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbPartName" HorizontalAlignment="Left" Height="23" Margin="188,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="105,76,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="254,116,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <TextBox x:Name="txbPrice" HorizontalAlignment="Left" Height="23" Margin="188,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141"/>
    </Grid>
</Page>

